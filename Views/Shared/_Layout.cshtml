<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


    <style>
        html, body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            height: 100%;
            overflow-x: hidden;
            background-color: #f0f0f0;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        aside.main-sidebar {
            width: 240px;
            background-color: #2f2f2f;
            color: #fff;
            transition: width 0.3s ease;
            overflow: hidden;
        }

            aside.main-sidebar.collapsed {
                width: 70px;
            }

        .sidebar-toggle-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 20px;
            cursor: pointer;
            width: 100%;
            padding: 15px;
            text-align: center;
        }

            .sidebar-toggle-btn:hover {
                background-color: #444;
            }

        .brand-link {
            display: block;
            background-color: #1d3c34;
            color: #fff;
            text-align: center;
            padding: 15px;
            font-weight: bold;
            text-decoration: none;
            font-size: 20px;
            white-space: nowrap;
        }

            .brand-link:hover {
                background-color: #163229;
                color: #ddd;
            }

        .brand-text {
            display: inline-block;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        aside.main-sidebar.collapsed .brand-text {
            opacity: 0;
            transform: translateX(-20px);
            pointer-events: none;
        }

        .sidebar nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar nav a {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
            padding: 12px 20px;
            transition: background-color 0.2s;
            white-space: nowrap;
        }

            .sidebar nav a:hover {
                background-color: #3d3d3d;
                color: #27ae60;
            }

            .sidebar nav a.active {
                background-color: #1d3c34;
                color: #fff;
            }

        .sidebar nav i {
            margin-right: 8px;
            color: #bbb;
            min-width: 20px;
            text-align: center;
        }

        .sidebar nav a:hover i {
            color: #27ae60;
        }

        /* Hide label text when collapsed */
        aside.main-sidebar.collapsed .sidebar nav a span {
            opacity: 0;
            transform: translateX(-20px);
            pointer-events: none;
            transition: all 0.3s ease;
        }

        aside.main-sidebar .sidebar nav a span {
            transition: all 0.3s ease;
        }

        .main-header {
            background: #fff;
            padding: 20px 30px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .main-header span {
                font-weight: 600;
                color: #1d3c34;
                font-size: 24px;
            }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .profile-img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #1d3c34;
        }

        .btn-theme {
            background-color: #1d3c34;
            color: #fff;
            border: none;
            padding: 6px 14px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
        }

            .btn-theme:hover {
                background-color: #163229;
                color: #fff;
            }

        .content-wrapper {
            flex: 1;
            padding: 20px 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .content-inner {
            width: 100%;
            max-width: 1200px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 20px;
            transition: all 0.3s;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            }

        .card-header {
            font-size: 20px;
            font-weight: 600;
            color: #007BFF;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-table {
            width: 100%;
            border-collapse: collapse;
        }

            .card-table th,
            .card-table td {
                padding: 12px 15px;
                border-bottom: 1px solid #ddd;
                text-align: left;
            }

            .card-table th {
                background: #007BFF;
                color: #fff;
                font-weight: 600;
            }

            .card-table tr:hover {
                background-color: #f1f1f1;
            }

        .action-icons i {
            color: #007BFF;
            font-size: 18px;
            cursor: pointer;
            transition: transform 0.3s;
        }

            .action-icons i:hover {
                transform: scale(1.3);
                color: #0056b3;
            }

        .btn-primary {
            background: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 16px;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

            .btn-primary:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <aside class="main-sidebar" id="mainSidebar">
            <button class="sidebar-toggle-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <a href="/Admin/Dashboard" class="brand-link">
                <span class="brand-text">PIA SRC</span>
            </a>



            <div class="sidebar">
                <nav>
                    <ul>
                        <li>
                            <a href="/Department/Index" class="@(ViewBag.ScreenTitle == "Departments Management" ? "active" : "")">
                                <i class="fas fa-building"></i> <span>Departments</span>
                            </a>
                        </li>
                        <li><a href="/Admin/Users" class="@(ViewBag.ScreenTitle == "User Management" ? "active" : "")"><i class="fas fa-users"></i> <span>Users</span></a></li>
                        <li><a href="/Admin/Complaints" class="@(ViewBag.ScreenTitle == "Complaints Handling" ? "active" : "")"><i class="fas fa-comment"></i> <span>Complaints</span></a></li>
                        <li><a href="/Admin/Logs" class="@(ViewBag.ScreenTitle == "System Logs" ? "active" : "")"><i class="fas fa-file-alt"></i> <span>Logs</span></a></li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-inner">
                <div class="main-header">
                    <span>@ViewBag.ScreenTitle</span>
                    <div class="navbar-right">
                        <img src="~/Content/profile.png" alt="Profile" class="profile-img" onerror="this.onerror=null; this.src='https://www.w3schools.com/howto/img_avatar.png';" />
                        <a href="/Account/Logout" class="btn-theme">Logout</a>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('mainSidebar').classList.toggle('collapsed');
        });
    </script>
</body>
</html>